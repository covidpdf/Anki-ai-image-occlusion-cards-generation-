# Database
DATABASE_URL=sqlite:///./app.db

# Application
APP_NAME=Anki Image Occlusion API
APP_VERSION=0.1.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/webp", "text/plain"]
UPLOAD_DIR=uploads

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379/0
REDIS_QUEUE_NAME=default

# Storage
STORAGE_TYPE=local
STORAGE_PATH=storage

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Background Tasks
BACKGROUND_TASK_TIMEOUT=300
MAX_RETRIES=3

# Health Checks
HEALTH_CHECK_INTERVAL=30